{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "fileLocation": [
        "relative",
        "${workspaceRoot}"
    ],
    "tasks": [
        {
            "label": "build current",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++14",
                "-Wall",
                "-pthread",
                "-o${fileBasenameNoExtension}",
                "${fileBasename}",
                "libs/libgtest.a",
                "libs/libgmock.a",
                "libs/libgtest_main.a"
            ],
            "problemMatcher": []
        },
        {
            "label": "debug build current",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++14",
                "-Wall",
                "-pthread",
                "-o${fileBasenameNoExtension}",
                "${fileBasename}",
                "libs/libgtest.a",
                "libs/libgmock.a",
                "libs/libgtest_main.a"
            ],
            "problemMatcher": []
        },
        {
            "label": "run current",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}",
            "problemMatcher": []
        },
        {
            "label": "build main",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++14",
                "-Wall",
                "-pthread",
                "-o${workspaceRootFolderName}",
                "main.cpp",
                "libs/libgtest.a",
                "libs/libgmock.a",
                "libs/libgtest_main.a"
            ],
            "problemMatcher": [],
            "group": {
                "_id": "build",
                "isDefault": false
            }
        },
        {
            "label": "debug build main",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++14",
                "-Wall",
                "-pthread",
                "-o${workspaceRootFolderName}",
                "main.cpp",
                "libs/libgtest.a",
                "libs/libgmock.a",
                "libs/libgtest_main.a"
            ],
            "problemMatcher": []
        },
        {
            "label": "run main",
            "type": "shell",
            "command": "./${workspaceRootFolderName}",
            "problemMatcher": []
        }
    ]
}